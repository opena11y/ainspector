<!DOCTYPE html>
<html lang="en-us">
  <head>
    {% include "./head.njk" %}
  </head>
  <body>
    {% include "./header.njk" %}

    <!-- Main section-->
    <div id="main-section" class="container px-4">
      <nav aria-label="Breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          {% if breadcrumb %}
            <li class="breadcrumb-item">{{breadcrumb}}</li>
          {% endif %}
        </ol>
      </nav>
      <main class="container px-4">
        <div class="row gx-4 justify-content-center">
          <div class="col-lg-10">

            {% block content %}

                {% if dropdownPages %}
                <nav class="second-level" aria-label="{{dropdownName}}">
                  {% for page in dropdownPages %}
                    {% if not loop.last %}
                    {% if page.filename %}
                    <a href="{{page.filename}}">{{page.link}}</a> |
                    {% endif %}
                    {% else %}
                    <a href="{{page.filename}}">{{page.link}}</a>
                    {% endif %}
                  {% endfor %}
                </nav>
                {% endif %}

                <h1>{{title}}</h1>

                {% include './' + content %}

            {% endblock %}
          </div>
        </div>
      </main>
    </div>
    {% include "./footer.njk" %}
    {% include "./scripts.njk" %}

  </body>
</html>
